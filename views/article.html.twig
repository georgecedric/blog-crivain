{% extends "layout.html.twig" %}

{% block title %}{{ article.title }} {% endblock %}

{% block content %}
<div class="row commentaire">
<p>
    <h2><a  href="{{ path('home') }}">{{ article.title }}</a></h2>
    <p>{{ article.content }}</p>
    <h3>Comments</h3>
    {% for comment in comments %}
        <strong>{{ comment.author.username }}</strong> à publié : {{ comment.content }} le {{ comment.date }}<br>
    
    {% else %}
        No comments yet.
    {% endfor %}
    <h3>Add a comment</h3>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        Soon!>
    {% else %}
        <a href="{{ path('login') }} ">Log in</a> to add comments.
    {% endif %}
</p>
{% endblock %}
