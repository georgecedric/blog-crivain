{% extends "layout.html.twig" %}

{% block title %}{{ article.title }} {% endblock %}

{% block content %}
<div class="row commentaire">
<p>

    <h2><a  href="{{ path('home') }}">{{ article.title }}</a></h2>
    <p>{{ article.content|raw }}</p>
    <div class=" comment">
    <h3>Commentaire</h3>
        
    {% for comment in comments %}
  
                <strong>{{ comment.author.username }}</strong> à publié  le {{ comment.date }}:<br>
                {{ comment.content }}<br>

{% else %}
          
        Pas encore de commentaire.
       
    {% endfor %}
    
    <h3>voulez vous ajouter un commentaire?</h3>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        Soon!>
    {% else %}
        <a href="{{ path('login') }} ">Log in</a> to add comments.
    {% endif %}
</p></div></div>
{% endblock %}
 
