{% extends 'layout.html.twig' %}
{% set adminMenu = true %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<div class="commentaire">
    <h2 class="text-center">{{ block('title') }}</h2>
    {% for flashMessage in app.session.flashbag.get('success') %}
    <div class="alert alert-success">
        {{ flashMessage }}
    </div>
    {% endfor %}

    <div class="comment">
    {{ form_start(replyForm, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="form-group">
            {{ form_label(replyForm.author, null, { 'label_attr':  {
                'class': 'col-sm-4 control-label'
            }}) }}
            <div class="col-sm-6">
                {{ form_errors(replyForm.author) }}
                {{ form_widget(replyForm.author, { 'attr':  {
                    'class': 'form-control',
                    'rows': '1'                
                }}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(replyForm.content, null, { 'label_attr':  {
                'class': 'col-sm-4 control-label'
            }}) }}
            <div class="col-sm-6">
                {{ form_errors(replyForm.content) }}
                {{ form_widget(replyForm.content, { 'attr':  {
                    'class': 'form-control',
                    'rows': '4'                
                }}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-3">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
        </div>
    {{ form_end(replyForm) }}
    </div>
</div>    
{% endblock %}
