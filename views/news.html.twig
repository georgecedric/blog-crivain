{% extends 'layout.html.twig' %}

{% block title %}Newsletter{% endblock %}

{% block content %}
<div class="row commentaire">
    <h2>Si vous désirez vous abonner à ma newsletter, c'est ici</h2><br>
    <div class="well ">
        <div class="col-sm-offset-8 ">
        {{ form_start(newsletterForm, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="form-group">
            {{ form_label(newsletterForm.name, null, { 'label_attr':  {
                'class': 'col-sm-4 control-label'
            }}) }}
            <div class="col-sm-8">
                {{ form_errors(newsletterForm.name) }}
                {{ form_widget(newsletterForm.name, { 'attr':  {
                    'class': 'form-control',
                    'rows': '1',
                'placeholder': 'Entrez votre nom et prenom'
                }}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(newsletterForm.email, null, { 'label_attr':  {
                'class': 'col-sm-4 control-label'
            }}) }}
            <div class="col-sm-8">
        
                {{ form_errors(newsletterForm.email) }}
                {{ form_widget(newsletterForm.email, { 'attr':  {
                    'class': 'form-control',
                    'rows': '1',
                'placeholder': 'Entrez votre email ici'
                }}) }}
         </div>
    </div> 
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="s'abonner" />
            </div>
            {{ form_end(newsletterForm) }}
</div>

{% endblock %}